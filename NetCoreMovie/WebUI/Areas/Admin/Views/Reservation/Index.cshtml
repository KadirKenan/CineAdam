
@model List<DataAccess.Entity.Reservation>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-lg-9">
                <h2>REZERVASYONLAR</h2>
            </div>
        </div>
        <div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kullanıcı</th>
                            <th>FilmAdı</th>
                            <th>Salon</th>
                            <th>Oturum</th>
                            <th>Hafta</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Durum</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var reservation in Model)
                        {
                            <tr>
                                <td>@reservation.Id</td>
                                <td>@reservation.AppUser</td>
                                <td>@reservation.Movie</td>
                                <td>@reservation.Saloon</td>
                                <td>@reservation.Session</td>
                                <td>@reservation.Week</td>
                                <td>@reservation.CreatedDate</td>
                                <td>
                                    @{
                                        if (reservation.IsActive)
                                        {
                                            <span class="badge badge-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Pasif</span>
                                        }
                                    }
                                </td>
                                <td>
                                    <form asp-action="Delete" method="post">
                                        <button class="btn btn-success btn-xs"><i class="icon-ok">Bilgi</i></button>
                                        <a href="/Admin/Reservation/Update/@reservation.Id" class="btn btn-primary btn-xs">Güncelle<i class="icon-pencil"></i></a>
                                        <a href="/Admin/Reservation/Delete/@reservation.Id" class="btn btn-danger btn-xs">Sil<i class="icon-trash "></i></a>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
